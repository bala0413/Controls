
@{
    ViewBag.Title = "Add New Product";
}

<link rel="stylesheet" href="style.css">
<link href="~/MyScripts/ng-tags-input.min.css" rel="stylesheet" />
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/select2/3.4.5/select2.css">
<link href="~/MyScripts/Select.css" rel="stylesheet" />
<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/selectize.js/0.8.5/css/selectize.default.css">
<script src="~/Scripts/angular.min.js"></script>
<script src="~/MyScripts/ng-tags-input.min.js"></script>
<script src="~/MyScripts/select.js"></script>
<script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.2.18/angular-sanitize.js"></script>
<script type="text/javascript" src="@Url.Content("~/MyScripts/AddProductController.js")"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/angularjs/1.4.1/angular.min.js"></script>
<table><tr><td height="10px"></td></tr></table>

<table cellpadding="4" cellspacing="4" width="90%" align="center" style="border:solid 2px red; padding-top:20px;">

    <tr>
        <td style="text-align:right;">Name</td>
        <td><input type="text" ng-model="Name" /></td>
    </tr>

    @*<tr>
            <td style="text-align:right;">Color</td>
            <td>
                <select name="dropdown" ng-model="Color" data-ng-options="c.color as c.color for c in ColorTabs">
                    <option value="" selected>Select</option>
                </select>
            </td>
        </tr>*@

    <tr>
        <td style="text-align:right;">Color</td>
        <td>
            <select multiple="multiple" ng-model="Color">
                <option value="" selected>Select</option>
                <option ng-repeat="c in ColorTabs" value="{{c.id}}">
                    {{c.color}}
                </option>
            </select>
            {{Color}}
        </td>
    </tr>

    <tr>
        <td style="text-align:right;">Price</td>
        <td><input type="number" ng-model="Price" />  </td>
    </tr>

    <tr>
        <td style="text-align:right;">Unit</td>
        <td>
            <input type="radio" ng-model="Unit" name="P" value="Pieces" />Pieces
            <input type="radio" ng-model="Unit" name="W" value="Weight" />Weight
        </td>
    </tr>

    <tr>
        <td style="text-align:right;">Expiry Date</td>
        <td><input type="date" ng-model="ExpiriyDate" />  </td>
    </tr>

    <tr>
        <td style="text-align:right;">UserGuide Languages</td>
        <td>
            <span ng-repeat="c in ColorTabs">
                <input type="checkbox" ng-model="c.Selected" />
                {{c.languages}}
            </span>
        </td>
    </tr>

    <tr>
        <td style="text-align:right;">Tag</td>
        <td>
            <tags-input ng-model="Tag" use-strings="true" min-length="2">
                <auto-complete source="loadNames($query)" min-length="1"></auto-complete>
            </tags-input>
            <span>Model: {{Tag}}</span>
        </td>
    </tr>

    <tr>
        <td style="text-align:right;">Payment Mode</td>
        <td>
            <ui-select multiple ng-model="multipleDemo.payment" theme="bootstrap" use-strings="true" ng-disabled="disabled" style="width: 300px;">
                <ui-select-match placeholder="Select payment option">{{$item}}</ui-select-match>
                <ui-select-choices repeat="payments in availablePayments | filter:$select.search">
                    {{payments}}
                </ui-select-choices>
            </ui-select>
            <p>Selected: {{multipleDemo.payment}}</p>
        </td>
    </tr>

    <tr>
        <td style="text-align:right;">City</td>
        <td>
            <ui-select multiple ng-model="multiple.city" theme="bootstrap" ng-disabled="disabled" close-on-select="false" style="width: 300px;" title="Choose a city">
                <ui-select-match placeholder="Select City">{{$item}}</ui-select-match>
                <ui-select-choices repeat="city in availableCity | filter:$select.search">
                    {{city}}
                </ui-select-choices>
            </ui-select>
            <p>Selected: {{multiple.city}}</p>
        </td>
    </tr>

    <tr>
        <td></td>
        <td></td>
    </tr>

    @*<tr>
            <td style="text-align:right;">Image</td>
            <td>   <input type="file"></td>
        </tr>*@

    <tr>
        <td></td>
        <td>
            <input type="button" value="Save" data-ng-click="save()" />
        </td>
    </tr>
</table>